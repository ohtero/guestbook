<form action="/newmessage" method="post" class="flex flex-col items-center w-1/3 gap-y-4 py-8 px-12 bg-slate-200 bg-opacity-80 rounded shadow-lg">
  <div class="flex flex-1 w-full">
      <label for="name" class="shrink-0 basis-2/12 w-full">Name:</label>
      <input type="text" name="name" id="name" maxlength="50" class="flex-auto basis-10/12" required>
  </div>
  <div class="flex w-full">
      <label for="country" class="shrink-0 basis-2/12">Country:</label>
      <input type="text" name="country" id="country" maxlength="50" class="flex-auto basis-10/12" required>
  </div>
  <div class="flex w-full">
      <label for="message" class="shrink-0 basis-2/12">Message:</label>
      <textarea rows="10" name="message" id="message" maxlength="500" class="flex-auto basis-10/12 max-h-64"></textarea>
  </div>
  <input type="submit" value="submit" class="flex-auto w-1/2 bg-sky-200 hover:bg-sky-100 rounded-lg py-2 border-2 border-sky-300 hover:border-sky-200 shadow-md">
</form>
