<!DOCTYPE html>
<html lang="en">
<head>
<%- include('../partials/head') %>
</head>
<%- include('../partials/body') %>
<header>
<%- include('../partials/header') %> 
</header>
<%- include('../partials/nav') %> 
<main class="flex justify-center my-8">
    <div class="flex flex-col w-1/3 gap-y-8 py-8 px-12 bg-slate-200 bg-opacity-50 backdrop-blur rounded shadow-lg">
        <% messages.forEach(({ name, country, message }) => { %>            
        <div class="flex flex-col gap-y-1 p-8 bg-gray-100 rounded shadow-md">
            <div class="font-bold"><%- name %></b></div>
            <div class="italic"><%- country %></i></div>
            <div class="border-t-2 border-slate-500 pt-2"><%- message %></div>
        </div>
        <% }); %>  
    </div>  

</main>
<%- include('../partials/footer') %>
</body>
</html>