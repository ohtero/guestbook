<!DOCTYPE html>
<html lang="en">
<head>
<%- include('../partials/head') %>
</head>
<%- include('../partials/body') %>
<header>
<%- include('../partials/header') %> 
</header>
<main class="flex justify-center w-full">
    <div class="flex flex-col w-1/3 gap-y-4 p-8 bg-gray-300 bg-opacity-40 rounded shadow-lg">
        <% messages.forEach(({ name, country, message }) => { %>            
        <div class="flex flex-col gap-y-4 p-8 bg-gray-100 bg-opacity-60 rounded shadow-md">
            <div class="name"><b><%- name %></b></div>
            <div class="country"><i><%- country %></i></div>
            <div class="poster-msg"><%- message %></div>
        </div>
        <% }); %>  
    </div>  

</main>
<%- include('../partials/footer') %>
</body>
</html>