<!DOCTYPE html>
<html lang="en">
<head>
<%- include('../partials/head') %>
</head>
<%- include('../partials/body') %>
<header>
<%- include('../partials/header') %> 
</header>
<%- include('../partials/nav') %> 
<main class="flex flex-col items-center my-8">

  <form action="javascript:void(0);" class="flex flex-col items-center w-1/3 gap-y-4 p-8 mb-8 bg-slate-200 bg-opacity-50 backdrop-blur rounded shadow-lg" id="form">
    <div class="flex flex-1 w-full">
        <label for="name" class="shrink-0 basis-2/12 w-full">Name:</label>
        <input type="text" name="name" id="name" maxlength="50" class="flex-auto basis-10/12">
    </div>
    <div class="flex flex-1 w-full">
        <label for="country" class="shrink-0 basis-2/12 w-full">Country:</label>
        <input type="text" name="country" id="country" maxlength="50" class="flex-auto basis-10/12">
    </div>
    <div class="flex flex-1 w-full">
        <label for="message" class="shrink-0 basis-2/12 w-full">Message:</label>
        <textarea rows="10" name="message" id="message" maxlength="500" class="flex-auto basis-10/12 max-h-64"></textarea>
    </div>
    <input type="submit" value="submit" id="post" class="flex-auto w-1/2 bg-sky-200 hover:bg-sky-100 rounded-lg py-2 border-2 border-sky-300 hover:border-sky-200 shadow-md">
  </form> 
  <div id="guestbook-entries" class="flex flex-col w-1/3 gap-y-4 p-8 bg-slate-200 bg-opacity-50 backdrop-blur rounded shadow-lg">
    <% messages.forEach(({ name, country, message }) => { %>            
    <div class="flex flex-col gap-y-1 p-8 bg-gray-100 rounded shadow-md">
        <div class="font-bold"><%- name %></b></div>
        <div class="italic"><%- country %></i></div>
        <div class="border-t-2 border-slate-500 pt-2"><%- message %></div>
    </div>
    <% }); %>  
</div>  
  </main>
  <%- include('../partials/footer') %> 
</body>
</html>